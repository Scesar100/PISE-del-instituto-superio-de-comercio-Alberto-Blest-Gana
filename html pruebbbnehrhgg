  <script>
    // JavaScript para interactividad de la cronología
    (function(){
      const steps = Array.from(document.querySelectorAll('.step'));
      const filled = document.getElementById('progressFill');

      function activateStep(n){
        const index = Math.max(1, Math.min(5, n));
        // width: percentage filled (n-1)/4 -> 0..100%
        const percent = ((index - 1) / (steps.length - 1)) * 100;
        filled.style.width = percent + '%';

        // actualizar estilos: marcar activo
        steps.forEach(s => {
          s.classList.remove('active');
          const c = s.querySelector('.circle');
          c.style.background = '';
          c.style.borderColor = '';
          c.style.color = '';
        });
        const activeStep = steps[index - 1];
        if(activeStep){
          activeStep.classList.add('active');
          const cir = activeStep.querySelector('.circle');
          cir.style.background = "linear-gradient(180deg,var(--accent), #6fb2ff)";
          cir.style.color = "#fff";
          cir.style.borderColor = "rgba(31,123,211,0.14)";
        }
      }

      // Click y keyboard handlers
      steps.forEach(s=>{
        s.addEventListener('click', ()=> activateStep(Number(s.dataset.step)));
        s.addEventListener('keydown', (e)=>{
          if(e.key === 'Enter' || e.key === ' '){
            e.preventDefault();
            activateStep(Number(s.dataset.step));
          }
          // left / right navigate
          if(e.key === 'ArrowRight'){
            const next = Math.min(5, Number(s.dataset.step) + 1);
            activateStep(next);
            document.querySelector('[data-step="'+next+'"]').focus();
          }
          if(e.key === 'ArrowLeft'){
            const prev = Math.max(1, Number(s.dataset.step) - 1);
            activateStep(prev);
            document.querySelector('[data-step="'+prev+'"]').focus();
          }
        });
      });

      // Inicial: step 1
      activateStep(1);

      // (Opcional) Avance automático de ejemplo - comentar si no quieres esto.
      // let cur = 1;
      // setInterval(()=>{ cur = cur === 5 ? 1 : cur+1; activateStep(cur); }, 6000);
    })();
  </script>
